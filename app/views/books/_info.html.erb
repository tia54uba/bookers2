      <div class="container">
  <div class="row">
    <div class="col-md-3">

      <h2>User info</h2>
 <%= image_tag user.get_profile_image("100x100") %>
    <table class="table">
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
      </table>
    <%= link_to  edit_user_path(user), class: "btn btn-block btn-outline-secondary", type: "button"  do %>
    <i class="fas fa-user-cog"></i>
    <% end %>





<h2 class="mt-3">New book</h2>
<!-- form_with部分 -->
<%= form_with model:book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book', class: "btn btn-success" %>
<% end %>





    </div>
